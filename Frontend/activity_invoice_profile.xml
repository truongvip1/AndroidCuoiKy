<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="invoiceprofile"
            type="com.example.doancuoiky.activity.InvoiceProfileActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.InvoiceProfileActivity">

        <TextView
            android:id="@+id/userIDTextView0"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="UserID"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView10" />

        <TextView
            android:id="@+id/userIDTextView"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:hint="UserID"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/userIDTextView0"
            app:layout_constraintTop_toTopOf="@+id/userIDTextView0" />

        <TextView
            android:id="@+id/roomNumberTextView0"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Room Number"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView0"
            app:layout_constraintTop_toBottomOf="@+id/userIDTextView0" />

        <TextView
            android:id="@+id/roomNumberTextView"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Room Number"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView"
            app:layout_constraintTop_toBottomOf="@id/userIDTextView" />

        <TextView
            android:id="@+id/periodTextView0"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Period"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView0"
            app:layout_constraintTop_toBottomOf="@+id/roomNumberTextView0" />

        <TextView
            android:id="@+id/checkInTimeTextView"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Check-in Time"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView"
            app:layout_constraintTop_toBottomOf="@id/roomNumberTextView" />

        <TextView
            android:id="@+id/checkOutTimeTextView"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Check-out Time"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView"
            app:layout_constraintTop_toBottomOf="@id/checkInTimeTextView" />

        <TextView
            android:id="@+id/dateTextView0"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Day's Payment"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView0"
            app:layout_constraintTop_toBottomOf="@id/checkOutTimeTextView" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Day's Payment"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView"
            app:layout_constraintTop_toBottomOf="@id/checkOutTimeTextView" />

        <TextView
            android:id="@+id/totalPriceTextView0"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Total Price"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView0"
            app:layout_constraintTop_toBottomOf="@id/dateTextView0" />

        <TextView
            android:id="@+id/totalPriceTextView"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Total Price"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView"
            app:layout_constraintTop_toBottomOf="@id/dateTextView" />

        <TextView
            android:id="@+id/reviewTextView0"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Review"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView0"
            app:layout_constraintTop_toBottomOf="@id/totalPriceTextView0" />

        <TextView
            android:id="@+id/reviewTextView"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start|top"
            android:hint="Review"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/userIDTextView"
            app:layout_constraintTop_toBottomOf="@id/totalPriceTextView" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Invoice Information"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>