<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="edituser"
            type="com.example.doancuoiky.activity.EditUserActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.EditUserActivity">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/roleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Role"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/avatarImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/nameTextView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="Name: "
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatarImage" />

        <TextView
            android:id="@+id/numberPhoneTextview0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Phone number: "
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/nameTextView0"
            app:layout_constraintTop_toBottomOf="@id/nameTextView0" />

        <TextView
            android:id="@+id/emailTextView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email: "
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/nameTextView0"
            app:layout_constraintTop_toBottomOf="@id/numberPhoneTextview0" />

        <TextView
            android:id="@+id/usernameTextView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Username: "
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/nameTextView0"
            app:layout_constraintTop_toBottomOf="@id/emailTextView0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/nameTextView0"
            app:layout_constraintTop_toBottomOf="@id/usernameTextView0"/>
        <TextView
            android:id="@+id/addressTextView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Address:"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/nameTextView0"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <TextView
            android:id="@+id/salaryTextView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Salary: "
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/addressTextView0"
            app:layout_constraintTop_toBottomOf="@id/addressTextView0" />

        <TextView
            android:id="@+id/birthDayTextView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="BirthDay: "
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/addressTextView0"
            app:layout_constraintTop_toBottomOf="@id/salaryTextView0" />

        <TextView
            android:id="@+id/hireDateTextView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Hiredate:"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/addressTextView0"
            app:layout_constraintTop_toBottomOf="@id/birthDayTextView0" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/avatarImage" />

        <EditText
            android:id="@+id/numberPhoneEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/nameEditText" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/numberPhoneEditText" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/emailEditText" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/nameEditText"
            app:layout_constraintTop_toBottomOf="@id/usernameEditText" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/passwordEditText" />

        <EditText
            android:id="@+id/salaryEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Salary"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/addressEditText" />

        <EditText
            android:id="@+id/birthDayEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Birthday"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/salaryEditText" />

        <EditText
            android:id="@+id/hireDateEditText"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:hint="Hiredate"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/numberPhoneTextview0"
            app:layout_constraintTop_toBottomOf="@id/birthDayEditText" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            android:text="Confirm"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/back_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>